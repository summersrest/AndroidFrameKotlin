<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Frame" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/primary</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">15sp</item>
        <item name="android:windowBackground">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Dialog.Theme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@drawable/bg_confirm</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
    
    <style name="ImmersionTheme" parent="Theme.Work">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="style_login_input_border">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/bg_login_edit_text</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="style_login_input_icon">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_marginStart">20dp</item>
    </style>

    <style name="style_login_input_et">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:background">@null</item>
    </style>

    <style name="style_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/btn_selector</item>
    </style>

    <style name="style_button_outline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/btn_outline_selector</item>
    </style>

    <style name="style_register_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="style_detail_tv_left">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorText07</item>
    </style>

    <style name="style_detail_tv_right">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="style_my_top_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>